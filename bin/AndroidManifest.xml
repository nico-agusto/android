<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicoricky.wtcaccshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CasioActivity"
            android:label="@string/title_activity_casio" >
        </activity>
        <activity
            android:name=".BellagioActivity"
            android:label="@string/title_activity_bellagio" >
        </activity>
        <activity
            android:name=".GoshActivity"
            android:label="@string/title_activity_gosh" >
        </activity>
    </application>

</manifest>
